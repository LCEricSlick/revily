%tr.service
  %td.service-status= service.current_status
  %td.service-name
    %h3= link_to service.name.truncate(30), service_path(service)
  %td.service-actions
    .controls.pull-right
      .btn-group
        = link_to edit_service_path(service), class: 'btn' do
          %i.icon-pencil
          Edit      
