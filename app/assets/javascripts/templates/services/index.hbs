{{ partial "services/filter" }}

<ul class="no-bullet services list">
  {{#each}}
    <li {{bind-attr class=":service :item health"}}>
      <div class="row">
        <div class="small-1"></div>
        <div class="small-11 columns right">
          <div class="item-content">
            <h3>
              {{#link-to "services.show" id}}
                {{name}}
              {{/link-to}}
            </h3>
            <i title="Policy" class="fa fa-group info"></i>
            {{#link-to "policies.show" policy}}{{policy.name}}{{/link-to}}          
          </div>
        </div>
      </div>
    </li>
  {{else}}
    <li class="service item none">
      <div class="row">

        <div class="small-1 columns"></div>
        <div class="small-11 columns right">
          <span class="secondary text-center">None</span>
        </div>          
      </div>
      
    </li>
  {{/each}}
</ul>
